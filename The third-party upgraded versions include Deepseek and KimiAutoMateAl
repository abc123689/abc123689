```bash
#!/bin/bash
# release_open_source.sh

set -e

echo "ğŸš€ AutoMate AI Secure å¼€æºå‘å¸ƒè„šæœ¬"
echo "="*60

# 1. éªŒè¯æ¸…ç†
echo "1. éªŒè¯å®‰å…¨æ¸…ç†..."
python -c "
import os
import re

# æ£€æŸ¥æ•æ„Ÿä¿¡æ¯
sensitive_patterns = [
    r'password\s*=',
    r'secret\s*=',
    r'api_key\s*=',
    r'token\s*=',
    r'127\.0\.0\.1',
    r'localhost',
    r'192\.168\.',
    r'10\.',
    r'172\.(1[6-9]|2[0-9]|3[0-1])\.'
]

issues = []
for root, dirs, files in os.walk('.'):
    for file in files:
        if file.endswith(('.py', '.yaml', '.yml', '.json', '.md')):
            filepath = os.path.join(root, file)
            try:
                with open(filepath, 'r', encoding='utf-8') as f:
                    content = f.read()
                    for pattern in sensitive_patterns:
                        if re.search(pattern, content, re.IGNORECASE):
                            issues.append(f'{filepath}: {pattern}')
            except:
                pass

if issues:
    print('âŒ å‘ç°æ•æ„Ÿä¿¡æ¯:')
    for issue in issues:
        print(f'  {issue}')
    exit(1)
else:
    print('âœ… å®‰å…¨æ¸…ç†éªŒè¯é€šè¿‡')
"

# 2. è¿è¡Œæµ‹è¯•
echo "2. è¿è¡Œæµ‹è¯•..."
pytest tests/ --cov=src/automate/ai --cov-report=html --cov-report=xml

# 3. å®‰å…¨æ‰«æ
echo "3. è¿è¡Œå®‰å…¨æ‰«æ..."
bandit -r src/ -f json -o bandit-report.json
safety check --json --output safety-report.json

# 4. æ„å»ºåŒ…
echo "4. æ„å»ºå‘å¸ƒåŒ…..."
python -m build

# 5. éªŒè¯åŒ…
echo "5. éªŒè¯åŒ…..."
twine check dist/*

# 6. ç”Ÿæˆæ–‡æ¡£
echo "6. ç”Ÿæˆæ–‡æ¡£..."
pdoc --html src/automate/ai --output-dir docs/api --force

# 7. åˆ›å»ºå‘å¸ƒæäº¤
echo "7. åˆ›å»ºå‘å¸ƒæäº¤..."
VERSION=$(python -c "from src.automate.ai import __version__; print(__version__)")
git tag -a "v${VERSION}" -m "Release v${VERSION}"
git push origin "v${VERSION}"

# 8. å‘å¸ƒåˆ°PyPI
echo "8. å‘å¸ƒåˆ°PyPI..."
read -p "æ˜¯å¦å‘å¸ƒåˆ°PyPI? (y/n): " -n 1 -r
echo
if [[ $REPLY =~ ^[Yy]$ ]]; then
    twine upload dist/*
fi

echo ""
echo "ğŸ‰ å¼€æºå‘å¸ƒå®Œæˆï¼"
echo ""
echo "ğŸ“¦ å‘å¸ƒåŒ…:"
ls -la dist/
echo ""
echo "ğŸ·ï¸  ç‰ˆæœ¬æ ‡ç­¾: v${VERSION}"
echo ""
echo "ğŸ“š ä¸‹ä¸€æ­¥:"
echo "  1. åˆ›å»ºGitHub Release"
echo "  2. æ›´æ–°æ–‡æ¡£ç½‘ç«™"
echo "  3. é€šçŸ¥ç¤¾åŒº"
echo "  4. ç›‘æ§é—®é¢˜åé¦ˆ"
echo "="*60
```

