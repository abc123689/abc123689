      size: "0.3GB"
      hash: "${QWEN_05B_HASH:-unverified}"  # é€šè¿‡ç¯å¢ƒå˜é‡è®¾ç½®
      verified_by: "AutoMate Security Team"
      safe_for: ["cleaning", "info_query", "app_launch"]
