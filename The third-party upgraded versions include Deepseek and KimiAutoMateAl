security:
  level: "high"
  
  # è¾“å…¥éªŒè¯
  max_input_length: 1000
  max_prompt_length: 5000
  max_response_length: 10000
  
  # å‘½ä»¤ç™½åå•ï¼ˆæ­£åˆ™è¡¨è¾¾å¼ï¼‰
  allowed_commands:
    ls: "^ls\\s+[-a-zA-Z0-9_/. ]+$"
    cat: "^cat\\s+[-a-zA-Z0-9_/. ]+$"
    ps: "^ps\\s*[-a-zA-Z0-9]*$"
    dumpsys: "^dumpsys\\s+[a-zA-Z0-9_]+$"
    getprop: "^getprop(\\s+[a-zA-Z0-9_.]*)?$"
    pm: "^pm\\s+(list|path|dump)\\s+[-a-zA-Z0-9. ]+$"
    am: "^am\\s+(start|force-stop)\\s+[-a-zA-Z0-9./ ]+$"
